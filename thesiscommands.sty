\tikzstyle{cell}=[rectangle, 
                  thick, 
                  minimum width=1cm, 
                  minimum height=1cm,
                  inner sep= 2mm]

\newcounter{tape_c}
\newcommand{\tape}[2][foo]{

  \begin{tikzpicture}
    
    \setcounter{tape_c}{0}

    \foreach \symbol in #2
    {
      \ifnumequal{#1}{\value{tape_c}}
      % Tape head.
      {
        \node at (\value{tape_c},0) [cell, draw, fill=orange!25]{\symbol};
      }
      % Regular cell.
      {
        \node at (\value{tape_c},0) [cell, draw]{\symbol};
      }
      \addtocounter{tape_c}{1}
    }
  \end{tikzpicture}
}
