\newcounter{tape_c}
\newcommand{\tape}[3][-1]{

  \begin{tikzpicture}

    \node at (-0.5,0) [circle, draw, minimum width=1.3cm] {#2};
    \setcounter{tape_c}{1}

    \foreach \symbol in #3
    {
      \ifnumequal{#1}{\value{tape_c}}
      % Tape head.
      {
        \node at (\value{tape_c},0) [cell, draw, fill=orange!25]{\symbol};
      }
      % Regular cell.
      {
        \node at (\value{tape_c},0) [cell, draw]{\symbol};
      }
      \addtocounter{tape_c}{1}
    }
  \end{tikzpicture}
}
